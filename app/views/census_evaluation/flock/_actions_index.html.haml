- if can?(:update_member_counts, @group)
  - if @total
    = button_action_edit(edit_group_member_counts_path(@group, year: @year))
    - if can?(:delete_member_counts, @group)
      = button_action_destroy(group_member_counts_path(@group, year: @year))
  - elsif @evaluation.current_census_year?
    = action_button('Aktuellen Bestand erzeugen', group_member_counts_path(@group), :plus, method: :post)
